{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "fullName": {
          "type": "string",
          "description": "The user's full name."
        },
        "houseNumber": {
          "type": "string",
          "description": "The user's house number."
        },
        "meterId": {
          "type": "string",
          "description": "The user's water meter ID."
        },
        "role": {
          "type": "string",
          "description": "The user's role, assigned automatically on registration.",
          "enum": ["user"]
        }
      },
      "required": ["uid", "email", "fullName", "houseNumber", "meterId", "role"]
    },
    "Payment": {
      "title": "Payment",
      "description": "Represents a water bill payment.",
      "type": "object",
      "properties": {
        "residentId": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "month": {
          "type": "number"
        },
        "year": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": ["Paid", "Unpaid"]
        },
        "paymentDate": {
          "type": "string",
          "format": "date-time"
        },
        "meterReadingId": {
          "type": "string"
        }
      },
      "required": ["residentId", "amount", "month", "year", "status"]
    },
    "MeterReading": {
      "title": "Meter Reading",
      "description": "Represents a water meter reading.",
      "type": "object",
      "properties": {
        "residentId": {
          "type": "string",
          "description": "The UID of the resident."
        },
        "reading": {
          "type": "number",
          "description": "The meter reading in cubic meters (mÂ³)."
        },
        "month": {
          "type": "number",
          "description": "The month the reading is for."
        },
        "year": {
          "type": "number",
          "description": "The year the reading is for."
        },
        "recordedBy": {
          "type": "string",
          "description": "The UID of the user who recorded the reading."
        },
        "recordedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the reading was recorded."
        }
      },
      "required": ["residentId", "reading", "month", "year", "recordedBy", "recordedAt"]
    }
  },
  "auth": {
    "providers": ["email_password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/payments/{paymentId}": {
      "schema": {
        "$ref": "#/entities/Payment"
      },
      "description": "Stores payment records."
    },
    "/meterReadings/{readingId}": {
      "schema": {
        "$ref": "#/entities/MeterReading"
      },
      "description": "Stores water meter readings."
    }
  }
}
